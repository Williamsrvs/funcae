# Roque todos os valores [ALTERAR-AQUI]

# ============= FLASK - PRODUÇÃO =============
FLASK_ENV=production
FLASK_APP=app/app.py
FLASK_SECRET_KEY=[ALTERAR-AQUI-GERE-UMA-CHAVE-ALEATÓRIA-DE-32-CARACTERES]
FLASK_DEBUG=False

# ============= BANCO DE DADOS - PRODUÇÃO =============
# Use credenciais diferentes de desenvolvimento
MYSQL_HOST=[ALTERAR-AQUI-SEU-HOST-MYSQL]
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=[ALTERAR-AQUI-SENHA-FORTE-ROOT]
MYSQL_USER=[ALTERAR-AQUI-USUARIO-PRODUCAO]
MYSQL_PASSWORD=[ALTERAR-AQUI-SENHA-FORTE-PRODUCAO]
MYSQL_DB=u799109175_db_funcae

# ============= SERVIDOR =============
HOST=0.0.0.0
PORT=5000
WORKERS=4

# ============= SEGURANÇA - PRODUÇÃO =============
SECURE_SESSION_COOKIE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax

# ============= AMBIENTE =============
ENVIRONMENT=production
ENABLE_PROFILING=False

# ============= LOGS =============
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION_SIZE=10485760
LOG_BACKUP_COUNT=10

# ============= UPLOADS =============
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=app/static/uploads
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,xls,xlsx,doc,docx

# ============= CACHE =============
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ============= EMAIL (Opcional) =============
MAIL_SERVER=[ALTERAR-AQUI-SE-USAR-EMAIL]
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=[ALTERAR-AQUI-EMAIL-USERNAME]
MAIL_PASSWORD=[ALTERAR-AQUI-EMAIL-PASSWORD]
MAIL_DEFAULT_SENDER=noreply@neuroeduca.com.br

# ============= BACKUP =============
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============= MONITORING =============
SENTRY_DSN=[ALTERAR-AQUI-SE-USAR-SENTRY-PARA-LOGS]
ENABLE_SLOW_QUERY_LOG=False
