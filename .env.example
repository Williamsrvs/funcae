# ============================================
# NEUROEDUCA - VARIÁVEIS DE AMBIENTE
# ============================================
# Copie este arquivo para .env e preencha com seus valores reais
# Nunca faça commit do arquivo .env com dados sensíveis

# ============= FLASK =============
FLASK_ENV=development
FLASK_APP=app/app.py
FLASK_SECRET_KEY=sua_chave_secreta_muito_segura_aqui
FLASK_DEBUG=False

# ============= BANCO DE DADOS =============
MYSQL_HOST=seu_host_do_banco
MYSQL_PORT=3306
MYSQL_USER=seu_usuario_do_banco
MYSQL_PASSWORD=sua_senha_do_banco
MYSQL_DB=nome_do_banco_de_dados

# ============= SERVIDOR =============
HOST=0.0.0.0
PORT=5000
WORKERS=4

# ============= SEGURANÇA =============
SECURE_SESSION_COOKIE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax

# ============= LOGS =============
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============= UPLOADS =============
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=app/static/uploads

# ============= AMBIENTE =============
# Valores: development, staging, production
ENVIRONMENT=development
